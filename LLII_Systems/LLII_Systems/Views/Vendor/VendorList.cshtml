@model List<LLII_Systems.Models.Vendor>

@using LLII_Systems.Models
@{
    ViewBag.Title = "Vendor list";
    DateTime today = DateTime.Today;
    DateTime defaultStartDate = today.AddDays(-7).Date;
}

<h2>Item list</h2>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">New Item</a></li>

</ol>

@using (Html.BeginForm("", "", FormMethod.Get))
{

    <div class="div-border">
        <table class="table table-bordered table-striped table-responsive text-center">
            <thead>
                <tr class="table-dark">
                    <th>Vendor Code</th>
                    <th>Company Name</th>
                    <th>Primary Subsidiary</th>
                    <th>Source</th>
                    <th>Tin no.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vendor in Model)
                {
                    <tr>
                        <td><a href="@Url.Action("detail", "vendor", new { vendorId = vendor.Id })">@vendor.Id</a></td>
                        <td>@vendor.Name</td>
                        <td></td>
                        <td>Local</td>
                        <th>@vendor.TinNumber</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    if (Model.Count == 0)
    {
        <p style="text-align:center; color:red;">No vendor found.</p>
    }
}

