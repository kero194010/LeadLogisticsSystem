@model LLII_Systems.Models.ItemDetailViewModel

<div class="vendor-list">
    @foreach (var vendor in Model.ItemVendors)
    {
        <div class="card mb-3" style="margin: 0px 2px">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="https://static.vecteezy.com/system/resources/previews/020/190/610/large_2x/mcdonalds-logo-mcdonald-icon-free-free-vector.jpg" alt="@vendor.Name" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@vendor.Name</h5>
                        <p class="card-text">@vendor.TinNumber</p>
                        <p class="card-text">Php @vendor.vendor_price</p>
                        <div class="button-group">
                            <a href="@Url.Action("detail", "vendor", new { vendorId = vendor.Id })" class="btn btn-primary">
                                View Details
                            </a>
                    

                        </div>
                    </div>
                </div>
            </div>
        </div>


    }
</div>

