@model List<order>
@using LLII_Systems.Models
@{
    ViewBag.Title = "Sales Order";
    DateTime today = DateTime.Today;
    DateTime defaultStartDate = today.AddDays(-7).Date;
}

<h2>Sales Order</h2>

<div class="container">
    @using (Html.BeginForm("PurchaseOrderHdr", "Orders", FormMethod.Get))
    {

        <div class="form-group  filter-date">
            <div class="row">
                <div class="col-md-4">
                    @Html.Label("Start Date:", new { @class = "control-label" })
                    @Html.TextBox("startDate", Request.QueryString["startDate"] ?? defaultStartDate.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "date" })
                </div>
                <div class="col-md-4">
                    @Html.Label("End Date:", new { @class = "control-label" })
                    @Html.TextBox("endDate", Request.QueryString["endDate"] ?? today.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "date" })
                </div>
                <div class="col-md-4">
                    <div class="form-group" style="margin-top: 25px;">
                        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-filter"></i> Filter</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="div-border">
            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr class="table-dark">
                        <th>Order No.</th>
                        <th>Order Date</th>
                        <th>Store Name</th>
                        <th>Vendor Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var purchaseOrder in Model)
                    {
                        <tr>
                            <td>@purchaseOrder.PurchaseOrderNumber</td>
                            <td>@purchaseOrder.PurchaseOrderDate.ToString("MMMM dd, yyyy")</td>
                            <td>@purchaseOrder.StoreName</td>
                            <td>@purchaseOrder.VendorName</td>
                            <td><a href="@Url.Action("Details", "Document", new { id = purchaseOrder.PurchaseOrderNumber })">View Details</a></td>
                        </tr>
                    }*@
                </tbody>
            </table>
        </div>

        @*if (Model.Count == 0)
        {
            <p style="text-align:center; color:red;">No purchase orders found.</p>
        }*@
    }
</div>
