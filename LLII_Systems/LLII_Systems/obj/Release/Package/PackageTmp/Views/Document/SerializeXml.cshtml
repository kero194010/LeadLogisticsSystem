@model LLII_Systems.Models.PurchaseOrdercs

@{
    ViewBag.Title = "Purchase Order";
}

<h2>Purchase Order Details</h2>

<table class="table">
    <tr>
        <th>Purchase Order Number</th>
        <td>@Model.PurchaseOrderNumber</td>
    </tr>
    <tr>
        <th>Purchase Order Date</th>
        <td>@Model.PurchaseOrderDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Invoice Date</th>
        <td>@Model.InvoiceDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Required Date</th>
        <td>@Model.RequiredDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Store Number</th>
        <td>@Model.StoreNumber</td>
    </tr>
    <tr>
        <th>Store Vendor Account Code</th>
        <td>@Model.StoreVendorAccountCode</td>
    </tr>
    <tr>
        <th>Vendor Code</th>
        <td>@Model.VendorCode</td>
    </tr>
    <tr>
        <th>Invoice Amount</th>
        <td>@Model.InvoiceAmount</td>
    </tr>
    <tr>
        <th>Vendor Name</th>
        <td>@Model.VendorName</td>
    </tr>
    <tr>
        <th>Ship To Name</th>
        <td>@Model.ShipToName</td>
    </tr>
    <tr>
        <th>Ship To Address3</th>
        <td>@Model.ShipToAddress3</td>
    </tr>
    <tr>
        <th>Comment</th>
        <td>@Model.Comment</td>
    </tr>
</table>

<h3>Purchase Order Line Items</h3>

<table class="table">
    <thead>
        <tr>
            <th>Line Item Number</th>
            <th>Vendor Item Code</th>
            <th>Item Code</th>
            <th>Order Quantity</th>
            <th>Purchase Unit</th>
            <th>Purchase Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lineItem in Model.PurchaseOrderLineItems)
        {
            <tr>
                <td>@lineItem.LineItemNumber</td>
                <td>@lineItem.VendorItemCode</td>
                <td>@lineItem.ItemCode</td>
                <td>@lineItem.OrderQuantity</td>
                <td>@lineItem.PurchaseUnit</td>
                <td>@lineItem.PurchaseUnitPrice</td>
            </tr>
        }
    </tbody>
</table>
